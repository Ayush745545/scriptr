# ContentKaro - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Core Settings
# ===========================================

# Application
SECRET_KEY=your-super-secret-key-change-in-production
ENVIRONMENT=development
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/contentkaro

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# REQUIRED - AI Services
# ===========================================

# OpenAI API Key (for GPT-4, Whisper, DALL-E)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# STORAGE - Choose One Provider
# ===========================================

# Storage provider: "cloudinary" or "s3"
STORAGE_PROVIDER=cloudinary

# Option 1: Cloudinary (Recommended for quick setup)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Option 2: AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=contentkaro-uploads

# ===========================================
# OPTIONAL - Advanced Settings
# ===========================================

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# AI Model Settings
GPT_MODEL=gpt-4
WHISPER_MODEL=whisper-1
DALLE_MODEL=dall-e-3

# Feature Flags
ENABLE_CAPTIONS=true
ENABLE_THUMBNAILS=true
ENABLE_TEMPLATES=true
ENABLE_HOOKS=true

# Subscription Limits (per tier per month)
FREE_SCRIPTS_LIMIT=10
FREE_CAPTIONS_LIMIT=5
FREE_THUMBNAILS_LIMIT=10
STARTER_SCRIPTS_LIMIT=50
STARTER_CAPTIONS_LIMIT=25
STARTER_THUMBNAILS_LIMIT=50
PRO_SCRIPTS_LIMIT=200
PRO_CAPTIONS_LIMIT=100
PRO_THUMBNAILS_LIMIT=200

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging Level
LOG_LEVEL=DEBUG
